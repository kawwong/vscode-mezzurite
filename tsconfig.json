{
	"compilerOptions": {
		"lib": [ "es6" ],
		"module": "commonjs",
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"outDir": "out",
		"rootDir": "src",
		"sourceMap": true,
		"target": "es6"
	},
	"include": [
		"src"
	],
	"exclude": [
		"node_modules",
		"**/**.test.ts"
	],
	"references": [
		{ "path": "./client" },
		{ "path": "./server" }
	]
}
